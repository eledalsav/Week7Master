@model List<DocentiViewModel>

<h1>Ecco la Lista dei Docenti</h1>


<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>e-mail</th>
            <th>Telefono</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.Email</td>
                <td>@item.Telefono</td>
                <th>
                    <a asp-controller="Docenti" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary">Modifica</a>
                    <a asp-controller="Docenti" asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary">Visualizza Dettagli</a>
                    <a asp-controller="Docenti" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Elimina</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Count</th>
            <th></th>
        </tr>
    </tfoot>
</table>